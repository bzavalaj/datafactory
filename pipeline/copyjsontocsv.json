{
	"name": "copyjsontocsv",
	"properties": {
		"activities": [
			{
				"name": "Copy json to csv",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [
					{
						"name": "Source",
						"value": "blobjsoninput//Axity_feed.json"
					},
					{
						"name": "Destination",
						"value": "blobcsvoutput//"
					}
				],
				"typeProperties": {
					"source": {
						"type": "JsonSource",
						"storeSettings": {
							"type": "AzureBlobStorageReadSettings",
							"recursive": true,
							"enablePartitionDiscovery": false
						},
						"formatSettings": {
							"type": "JsonReadSettings"
						}
					},
					"sink": {
						"type": "DelimitedTextSink",
						"storeSettings": {
							"type": "AzureBlobStorageWriteSettings",
							"copyBehavior": "MergeFiles"
						},
						"formatSettings": {
							"type": "DelimitedTextWriteSettings",
							"quoteAllText": true,
							"fileExtension": ".csv"
						}
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"mappings": [
							{
								"source": {
									"path": "['created_time']"
								},
								"sink": {
									"name": "created_time"
								}
							},
							{
								"source": {
									"path": "['message']"
								},
								"sink": {
									"name": "message"
								}
							},
							{
								"source": {
									"path": "['id']"
								},
								"sink": {
									"name": "id"
								}
							},
							{
								"source": {
									"path": "$['paging']['cursors']['before']"
								},
								"sink": {
									"name": "before"
								}
							},
							{
								"source": {
									"path": "$['paging']['cursors']['after']"
								},
								"sink": {
									"name": "after"
								}
							},
							{
								"source": {
									"path": "$['paging']['next']"
								},
								"sink": {
									"name": "next"
								}
							}
						],
						"collectionReference": "$['data']"
					}
				},
				"inputs": [
					{
						"referenceName": "Json2",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "DelimitedText1",
						"type": "DatasetReference"
					}
				]
			}
		],
		"annotations": []
	}
}